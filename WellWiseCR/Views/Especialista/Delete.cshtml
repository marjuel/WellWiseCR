@model WellWiseCR.Models.Especialista

@if (Model.Estado.Equals("Activo"))
{
    ViewData["Title"] = "Desactivar especialista";
    <h1>Deactivar especialista</h1>
    <br />
    <h3>¿Está seguro de que desea desactivar este especialista?</h3>
}
else
{
    ViewData["Title"] = "Reactivar especialista";
    <h1>Reactivar especialista</h1>
    <br />
    <h3>¿Está seguro de que desea reactivar este especialista?</h3>
}
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Especialidad
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Especialidad.NombreEspecialidad)
        </dd>
        <dt class = "col-sm-2">
            Correo electrónico
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            Nombre completo
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NombreCompleto)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Estado)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Estado)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdEspecialista" />
        @if (Model.Estado.Equals("Activo"))
        {
            <input type="submit" value="Desactivar" class="btn btn-danger" />
        }
        else
        {
            <input type="submit" value="Reactivar" class="btn btn-success" />
        }

    </form>
    <div>
        <br />
        <a class="btn btn-secondary" asp-action="Index">Regresar</a>
    </div>
</div>
