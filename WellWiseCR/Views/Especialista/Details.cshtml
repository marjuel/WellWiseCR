@model WellWiseCR.Models.Especialista

@{
    ViewData["Title"] = "Consultar especialista";
}

<h1>Consultar detalles</h1>
<h4>Especialista</h4>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            ID de especialista
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdEspecialista)
        </dd>
        <dt class="col-sm-2">
            Especialidad
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Especialidad.NombreEspecialidad)
        </dd>
        <dt class = "col-sm-2">
            Correo electrónico
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            Nombre completo
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NombreCompleto)
        </dd>
        <dt class = "col-sm-2">
            Provincia
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Provincia)
        </dd>
        <dt class = "col-sm-2">
            Cantón
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Canton)
        </dd>
        <dt class = "col-sm-2">
            Estado
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Estado)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-success" asp-action="Edit" asp-route-id="@Model?.IdEspecialista">Modificar</a>
    <div>
        <br />
        <a class="btn btn-secondary" asp-action="Index">Regresar</a>
    </div>
</div>
