@model WellWiseCR.Models.Usuario

@{
    ViewData["Title"] = "WellWiseCR - Desactivar usuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@if (Model.Estado.Equals("Activo"))
{
    <h1>Deactivar usuario</h1>
    <br />
    <h3>¿Está seguro de que desea desactivar este usuario?</h3>
}
else
{
    <h1>Reactivar usuario</h1>
    <br />
    <h3>¿Está seguro de que desea reactivar este usuario?</h3>
}

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nombre de usuario
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NombreUsuario)
        </dd>
        <dt class = "col-sm-2">
            Nombre completo
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NombreCompleto)
        </dd>
        <dt class = "col-sm-2">
            Correo electrónico
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            Rol
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Rol)
        </dd>
        <dt class = "col-sm-2">
            Estado
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Estado)
        </dd>
    </dl>
    
    @*<form asp-action="Delete">*@
    <form asp-action="Delete">
        <input type="hidden" asp-for="NombreUsuario" />
        @if (Model.Estado.Equals("Activo"))
        {
            <input type="submit" value="Desactivar" class="btn btn-danger" />
        }
        else
        {
            <input type="submit" value="Reactivar" class="btn btn-success" />
        }
        
    </form>
    <div>
        <br />
        <a class="btn btn-secondary" asp-action="Index">Regresar</a>
    </div>
</div>
