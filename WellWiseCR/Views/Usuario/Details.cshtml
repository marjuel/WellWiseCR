@model WellWiseCR.Models.Usuario

@{
    ViewData["Title"] = "Consultar usuario";
    string fechaNacimiento = Model.FechaNacimiento.ToString("dd/MM/yyyy");
}

<h1>Consultar usuario</h1>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nombre de usuario
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NombreUsuario)
        </dd>
        <dt class = "col-sm-2">
            Contraseña
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Password)
        </dd>
        <dt class = "col-sm-2">
            Correo electrónico
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            Nombre completo
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NombreCompleto)
        </dd>
        <dt class = "col-sm-2">
           Fecha de nacimiento
        </dt>
        <dd class = "col-sm-10">
            @*@Html.DisplayFor(model => model.FechaNacimiento)*@
            @fechaNacimiento
        </dd>
        <dt class = "col-sm-2">
            Provincia
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Provincia)
        </dd>
        <dt class = "col-sm-2">
            Cantón
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Canton)
        </dd>
        <dt class = "col-sm-2">
            Rol
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Rol)
        </dd>
        <dt class = "col-sm-2">
            Estado
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Estado)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-success" asp-action="Edit" asp-route-id="@Model?.NombreUsuario">Modificar</a>
    <div>
        <br />
        <a class="btn btn-secondary" asp-action="Index">Regresar</a>
    </div>
</div>
