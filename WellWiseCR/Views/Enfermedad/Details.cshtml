@model WellWiseCR.Models.Enfermedad

@{
    ViewData["Title"] = "Consultar enfermedad";
}

<h1>Consultar enfermedad</h1>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            ID de enfermedad
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdEnfermedad)
        </dd>
        <dt class="col-sm-2">
            Especialidad
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Especialidad.NombreEspecialidad)
        </dd>
        <dt class = "col-sm-2">
            Nombre de enfermedad
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NombreEnfermedad)
        </dd>
        <dt class = "col-sm-2">
            Síntomas
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Sintomas)
        </dd>
        <dt class = "col-sm-2">
            Nivel de alerta
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NivelAlerta)
        </dd>
        <dt class = "col-sm-2">
            Recomendaciones
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Recomendaciones)
        </dd>
        <dt class = "col-sm-2">
            Estado
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Estado)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-success" asp-action="Edit" asp-route-id="@Model?.IdEnfermedad">Modificar</a>
    <div>
        <br />
        <a class="btn btn-secondary" asp-action="Index">Regresar</a>
    </div>
</div>
