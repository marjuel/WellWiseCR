@model WellWiseCR.Models.Enfermedad

@if (Model.Estado.Equals("Activo"))
{
    ViewData["Title"] = "Desactivar enfermedad";
    <h1>Desactivar enfermedad</h1>
    <br />
    <h3>¿Está seguro de que desea desactivar esta enfermedad?</h3>
}
else
{
    ViewData["Title"] = "Reactivar enfermedad";
    <h1>Reactivar enfermedad</h1>
    <br />
    <h3>¿Está seguro de que desea reactivar esta enfermedad?</h3>
}
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Especialidad
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Especialidad.NombreEspecialidad)
        </dd>
        <dt class = "col-sm-2">
            Nombre de enfermedad
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NombreEnfermedad)
        </dd>
        <dt class = "col-sm-2">
            Estado
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Estado)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdEnfermedad" />
        @if (Model.Estado.Equals("Activo"))
        {
            <input type="submit" value="Desactivar" class="btn btn-danger" />
        }
        else
        {
            <input type="submit" value="Reactivar" class="btn btn-success" />
        }
    </form>
    <div>
        <br />
        <a class="btn btn-secondary" asp-action="Index">Regresar</a>
    </div>
</div>
