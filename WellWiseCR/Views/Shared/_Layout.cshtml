<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WellWiseCR</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WellWiseCR.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">@GlobalData.nombreGlobal.ToUpper()</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Inicio</a>
                        </li>
                        <li class="nav-item">
                            @if (GlobalData.rolGlobal.Equals("Administrador"))
                            {
                                <a class="nav-link text-dark" asp-area="" asp-controller="Usuario" asp-action="Index">Usuarios</a>
                            }
                            else
                            {
                                <a class="nav-link text-dark" type="button" 
                                onclick="location.href='https://localhost:7097/Usuario/Edit/'+'@GlobalData.nombreGlobal.ToUpper()'">Mi perfil</a>
                            }
                        </li>
                        <li class="nav-item">
                            @if (GlobalData.rolGlobal.Equals("Administrador"))
                            {
                                <a class="nav-link text-dark" asp-area="" asp-controller="Especialidad" asp-action="Index">Especialidades</a>
                            }
                            else
                            {
                                <a class="nav-link text-dark" asp-area="" asp-controller="Diagnostico" asp-action="Index">Diagnósticos</a>
                            }
                        </li>
                        <li class="nav-item">
                            @if (GlobalData.rolGlobal.Equals("Administrador"))
                            {
                                <a class="nav-link text-dark" asp-area="" asp-controller="Especialista" asp-action="Index">Especialistas</a>
                            }
                            else
                            {
                                @*POSIBLE NUEVA OPCION PARA PACIENTE*@
                            }
                        </li>
                        <li class="nav-item">
                            @if (GlobalData.rolGlobal.Equals("Administrador"))
                            {
                                <a class="nav-link text-dark" asp-area="" asp-controller="Enfermedad" asp-action="Index">Enfermedades</a>
                            }
                            else
                            {
                                @*POSIBLE NUEVA OPCION PARA PACIENTE*@
                            }
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacidad</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="CerrarSesion">Cerrar sesión</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container text-center">
            &copy; 2023 - SoftStyles&reg; - WellWiseCR
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
