@model WellWiseCR.Models.Especialidad

@if (Model.Estado.Equals("Activo"))
{
    ViewData["Title"] = "Desactivar especialidad";
    <h1>Desactivar especialidad</h1>
    <br />
    <h3>¿Está seguro de que desea desactivar esta especialidad?</h3>
}
else
{
    ViewData["Title"] = "Reactivar especialidad";
    <h1>Reactivar especialidad</h1>
    <br />
    <h3>¿Está seguro de que desea reactivar esta especialidad?</h3>
}
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nombre de especialidad
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NombreEspecialidad)
        </dd>
        <dt class = "col-sm-2">
            Descripción
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descripcion)
        </dd>
        <dt class = "col-sm-2">
            Estado
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Estado)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdEspecialidad" />
        @if (Model.Estado.Equals("Activo"))
        {
            <input type="submit" value="Desactivar" class="btn btn-danger" />
        }
        else
        {
            <input type="submit" value="Reactivar" class="btn btn-success" />
        }

    </form>
    <div>
        <br />
        <a class="btn btn-secondary" asp-action="Index">Regresar</a>
    </div>
</div>
