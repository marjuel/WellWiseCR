@model WellWiseCR.Models.Especialidad

@{
    ViewData["Title"] = "Consultar especialidad";
}

<h1>Consultar especialidad</h1>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            ID de especialidad
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdEspecialidad)
        </dd>
        <dt class = "col-sm-2">
            Nombre de especialidad
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NombreEspecialidad)
        </dd>
        <dt class = "col-sm-2">
            Descripción
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descripcion)
        </dd>
        <dt class = "col-sm-2">
            Estado
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Estado)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-success" asp-action="Edit" asp-route-id="@Model?.IdEspecialidad">Modificar</a>
    <div>
        <br />
        <a class="btn btn-secondary" asp-action="Index">Regresar</a>
    </div>
</div>
